.example
  :markdown
        :::javascript
        "use strict";

        var Cylon = require("cylon");

        Cylon.robot({
          connections: {
            keyboard: { adaptor: "keyboard" }
          },

          devices: {
            keyboard: { driver: "keyboard" }
          },

          work: function(my) {
            my.keyboard.on("a", function() {
              console.log("a pressed!");
            });
          }
        }).start();

