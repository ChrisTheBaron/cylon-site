.example
  :markdown
        :::javascript
        var Cylon = require('cylon');

        Cylon
          .robot()
          .connection("sphero", { adaptor: 'sphero', port: '/dev/rfcomm0' })
          .device("sphero", { driver: 'sphero' })
          .on('ready', function(bot) {
            setInterval(function() {
              bot.sphero.roll(60, Math.floor(Math.random() * 360));
            }, 1000);
          });

        Cylon.start();
