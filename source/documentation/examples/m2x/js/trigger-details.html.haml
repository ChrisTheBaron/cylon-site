.example
  :markdown
        :::javascript
        "use strict";

        var Cylon = require("cylon");

        Cylon.robot({
          connections: {
            m2x: { adaptor: "m2x", masterKey: "<masterKey>" }
          },

          devices: {
            m2x: { driver: "m2x" }
          },

          work: function(my) {
            my.m2x.trigger("<deviceId>", "<triggerId>", function(err, data) {
              console.log("Err: ", err);
              console.log("Trigger: ", data);
            });
          }
        }).start();
