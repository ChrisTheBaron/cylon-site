.example
  :markdown
        :::javascript
        var Cylon = require('cylon');

        Cylon.robot({
          connections: {
            raspi: { adaptor: 'raspi' }
          },

          devices: {
            led: { driver: 'led', pin: 11 },
            button: { driver: 'button', pin: 7 }
          },

          work: function(my) {
            my.button.on('push', my.led.toggle);
          }
        }).start();

