        :::javascript
        var Cylon = require('cylon');

        Cylon.robot({
          connections: {
            digispark: { adaptor: 'digispark' }
          },

          devices: {
            led: { driver: 'led', pin: 1 }
          },

          work: function(my) {
            every((1).second(), function() {
              my.led.toggle();
            });
          }
        }).start();
