        :::javascript
        var Cylon = require('cylon');

        Cylon.robot({
          connections: {
            edison: { adaptor: 'intel-iot' }
          },

          devices: {
            led: { driver: 'led', pin: 13 }
          },

          work: function(my) {
            every((1).second(), function() {
              my.led.toggle();
            });
          }
        });

        Cylon.start();
