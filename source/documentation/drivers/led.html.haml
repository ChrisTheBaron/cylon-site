    %h2 Commands:
    
    %dl.methods 
      %dt turnOn
      %dd Turns LED on.
      %dt turnOff
      %dd Turns LED off.
      %dt toggle
      %dd Turns the LED on, or off, depending on if it is already off, or on, respectively.
