%html{"ng-app" => "cylon"}
  %head
    = partial "/layouts/hybridpages/head"
    %link{href: "//fonts.googleapis.com/css?family=Inconsolata:400,700|Montserrat:700", rel: "stylesheet"}
    %link{href: '/favicon.ico', rel: 'shortcut icon', type: 'image/gif' }
  %body
    = partial "layouts/layout-contents"
    .app
      #top-header
        .back-index-top
          - if current_page.data.parallaxTop == true
            .background-header.parallax-top.parallax-fx
          %div{:class => "container-hero#{current_page.data.parallaxTop == true ? '' : ' section-nav'}" }
            = partial "/layouts/partials/menu_fixed"

            - if current_page.data.hero == true
              = partial "/layouts/hybridpages/hero"
              = partial "/layouts/hybridpages/hero_black"

      - if current_page.data.page_title_show == true && (current_page.data.layout != 'documentation' || current_page.data.main_nav == true)
        = partial "/layouts/hybridpages/page_title"

      .container
        = yield

      - if current_page.data.catcher == true
        = partial "/layouts/hybridpages/catcher"

    .app-footer
      = partial "/layouts/hybridpages/footer"

  - if is_blog_article?
    %script{:src => "/javascripts/disqus.js"}
    %script{src: "//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-53632dea5fd71564", type: "text/javascript"}
