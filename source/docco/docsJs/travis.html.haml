            = succeed "});" do
              %span.string '2.0.0'
            %span.keyword var
            BLUE =
            %span.number 0x0000ff
            %span.keyword var
            GREEN =
            %span.number 0x00ff00
            %span.keyword var
            RED =
            %span.number 0xff0000
            Cylon.robot({
            connection: {name:
            = succeed "," do
              %span.string 'sphero'
            = succeed "," do
              %span.string 'sphero'
            = succeed "}," do
              %span.string '/dev/rfcomm0'
            = succeed "," do
              %span.string 'sphero'
            = succeed "}," do
              %span.string 'sphero'
            %span.function
              %span.keyword function
              %span.params (me)
              {
            %span.keyword var
            user =
            %span.string "hybridgroup"
            %span.keyword var
            name =
            %span.string "cylon"
            me.checkTravis =
            %span.function
              %span.keyword function
              %span.params ()
              {
            Logger.info(
            %span.string> "Checking repo "
            +user+
            %span.string> "/"
            +name);
            me.sphero.setRGB(BLUE,
            = succeed ");" do
              %span.literal true
            %span.function
              %span.keyword function
              %span.params (err, res)
              {
            %span.keyword if
            (res.repo !=
            = succeed ")" do
              %span.literal undefined
            %span.keyword if
            (res.repo.last_build_state ==
            = succeed ")" do
              %span.string 'passed'
            = succeed ");" do
              %span.literal true
            %span.keyword else
            %span.keyword if
            (res.repo.last_build_state ==
            = succeed ")" do
              %span.string 'failed'
            = succeed ");" do
              %span.literal true
            %span.keyword else
            {
            me.sphero.setRGB(BLUE,
            = succeed ");" do
              %span.literal true
            %span.keyword else
            {
            me.sphero.setRGB BLUE,
            %span.literal true
            }
            });
            }
            
            me.checkTravis();
            
            every((
            %span.number> 10
            ).seconds(),
            %span.function
              %span.keyword function
              %span.params ()
              {
            me.checkTravis();
            });
            }
            }).start();